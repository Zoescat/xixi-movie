/* pages/home/home.wxss */
.movie{
  height: 220rpx;
  display: flex;
  padding: 10px;
  border-bottom: 1px solid #ccc
}
.movie-img{
  width: 150rpx;
  height: 100%;
  margin-right: 15px;
}
.movie-info{
  flex:1;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;  
}
.movie-info :hover{
  overflow: visible;
}
.movie-title{
  color: #242121;
  font-size: 35rpx;
  font-weight: bolder;
}
.movie-score{
  color: #faa100;
}
.movie-comment{
  height: 60rpx;
  background-color: #E54847;
  color: #fff;
  font-size: 10px;
  margin-top: 70rpx;
}